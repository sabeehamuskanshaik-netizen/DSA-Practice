class Solution {
    int ans=0;
    public int height(TreeNode root){
        if(root==null){
            return 0;
        }
        int lefty=height(root.left);
        int righty=height(root.right);
        ans=Math.max(lefty+righty,ans);
        return (Math.max(lefty,righty)+1);
    }
    public int diameterOfBinaryTree(TreeNode root) {
        height(root);
        return ans;  
    }
}
